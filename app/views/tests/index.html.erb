<div class="row justify-content-center">
  <% if current_user %>
  <p>
      [ <%= link_to t('actions.badges'), badges_path %> ]
      [ <%= link_to t('.user_badges', user: current_user.email), user_user_badges_path(current_user) %> ]
  </p>
  <% end %>

  <div class="col col-md-4">
    <table class="table table-hover">
        <tr style="text-align:center">
          <th colspan="2" ><%= t('.header')%></th>
        </tr>
      </thead>
      <tr style="text-align:center" >
        <th class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class:'text-success hide' %>
          <%= octicon 'arrow-down', class:'text-success hide' %>
        </th>
        <th><%= t('actions.actions') %></th>
      </tr>

        <%= render @tests  %>

    </table>
  </div>       
</div>