<div class="row justify-content-center">
  <div class="col col-md-4">
    <%= form_with model: @feedback, local: true do |form| %>
        <%= render 'shared/errors', resource: @feedback %>
        <p>
            <%= form.select(:subject, ['Suggestion', 'Difficulties', 'Other']) %>
        </p>
        <p>     
            <%= form.text_area :feedback, rows: 7, cols: 60, placeholder: "Please, type your feedback here" %>
        </p>
        
        <p>
            <%= form.submit t('actions.submit'), class: 'btn-primary' %>
            <%= link_to t('action.back'), admin_tests_path %>
        </p>
    <% end %>
  </div>       
</div> 