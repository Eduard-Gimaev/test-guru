<div class="row justify-content-center">
  <div class="col col-md-4">
    <h2><%= t('.header')%></h2>
    <div class="card body-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <p>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "first name" %>
            </p>
            <p>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "last name" %>
            </p>
            <p>
              <%= f.text_field :type, autofocus: true, autocomplete: "type", placeholder: "User type" %>
            </p>
            <p>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
            </p>
            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= t('.min_characters', min: @minimum_password_length )%>)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </p>
            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </p>    
              <br />
              <%= f.submit t('actions.signup'), class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="mt-1">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
